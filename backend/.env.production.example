# Copy to your deployment platform environment settings (do not commit real secrets)
PORT=4000
NODE_ENV=production

# Comma-separated exact frontend origins
CORS_ORIGIN=https://quiz.example.com,https://www.quiz.example.com

# Generate with: npm run secrets:generate
JWT_SECRET=replace-with-64-hex-secret
ADMIN_KEY=replace-with-long-random-admin-key

# Keep false in production
EXPOSE_RESET_CODE=false
AI_ENABLED=true
AI_FREE_PROVIDER=gemini
AI_PREMIUM_PROVIDER=openai
GEMINI_API_KEY=replace-with-gemini-key
GEMINI_MODEL_FREE=gemini-2.0-flash
OPENAI_API_KEY=replace-with-openai-key
OPENAI_MODEL_PREMIUM=gpt-5-mini
AI_REQUEST_TIMEOUT_MS=25000
AI_FREE_DAILY_REQUESTS=25
AI_PREMIUM_DAILY_REQUESTS=300
AI_FREE_INPUT_CHAR_LIMIT=4000
AI_PREMIUM_INPUT_CHAR_LIMIT=12000
AI_FREE_MAX_OUTPUT_TOKENS=450
AI_PREMIUM_MAX_OUTPUT_TOKENS=900
# Comma-separated user IDs with premium tier access (until payment system is integrated)
AI_PREMIUM_USER_IDS=

# Enable when behind Nginx/Cloudflare/Load Balancer
TRUST_PROXY=true

RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120
LOG_DIR=logs
LOG_RETENTION_DAYS=30
LOG_LEVEL=info
DB_PATH=./data
INACTIVE_USER_DAYS=180
ENABLE_GZIP=true

# If TLS terminates at proxy/CDN, keep backend HTTPS disabled
HTTPS_ENABLED=false
HTTPS_ENFORCE=false
HTTPS_PORT=4443
HTTPS_PFX_PATH=
HTTPS_PFX_PASSPHRASE=
