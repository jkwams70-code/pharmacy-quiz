{
  "name": "pharmacy-quiz-backend",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "seed": "node src/scripts/seedQuestions.js",
    "backup": "node src/scripts/backupData.js",
    "cleanup": "node src/scripts/cleanupRuntimeFiles.js",
    "cleanup:users": "node src/scripts/cleanupInactiveUsers.js",
    "validate:data": "node src/scripts/validateDataRelations.js",
    "repair:data": "node src/scripts/repairDataRelations.js",
    "preflight:prod": "node src/scripts/preflightProduction.js",
    "secrets:generate": "node src/scripts/generateSecrets.js",
    "smoke:ui": "node src/scripts/uiSmoke.js",
    "smoke:firefox": "node src/scripts/firefoxSmoke.js",
    "smoke:mem": "node src/scripts/checkMemoryLeak.js",
    "smoke:https": "node src/scripts/verifyHttps.js",
    "cert:dev": "powershell -ExecutionPolicy Bypass -File create-dev-cert.ps1",
    "security:audit": "npm audit --omit=dev",
    "security:outdated": "npm outdated",
    "smoke": "powershell -ExecutionPolicy Bypass -File test-api.ps1",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:restart": "pm2 restart quiz-api",
    "pm2:status": "pm2 status quiz-api",
    "pm2:logs": "pm2 logs quiz-api --lines 100"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0"
  }
}
